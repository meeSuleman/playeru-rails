<!-- app/views/user_mailer/confirmation_instructions.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  </head>
  <body>
    <h1>Welcome to PlayerU!</h1>

    <p>Hello <%= @user.first_name %>,</p>

    <p>Thank you for signing up. To complete your registration, please enter the following OTP code in the app to verify your email address:</p>

    <h2 style="color: #4CAF50; font-size: 24px;"><%= @otp %></h2>

    <p>This OTP is valid for 15 minutes. If you did not request this, please ignore this email.</p>

    <p>Best regards,<br>
       The PlayerU Team</p>
  </body>
</html>
